function drawclouds() {
  penUp();
  moveTo(47, 59);
  penColor("lightgrey");
  for (var i = 0; i < 4; i++) {
    penUp();
    moveTo(randomNumber(1, 315), randomNumber(1, 82));
    penDown();
    dot(10);
    turnTo(90);
    moveForward(15);
    dot(10);
    moveForward(15);
    dot(10);
    moveForward(15);
    dot(10);
    turnaround();
    moveForward(10);
    turnTo(0);
    moveForward(10);
    dot(10);
    turnTo(-90);
    moveForward(15);
    dot(10);
    moveForward(15);
    dot(10);
  }
}
