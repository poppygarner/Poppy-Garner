function drawbackground() {
  penColor("lightBlue");
  penDown();
  dot(1000);
  penUp();
}
function turnaround() {
  turnLeft(180);
}
function drawsnow() {
  for (var i = 0; i < 350; i++) {
    penDown();
    moveBackward(200);
    penColor("white");
    moveTo(randomNumber(1, 314), randomNumber(310, 448));
    dot(20);
    penUp();
  }
}
function drawtree1() {
  moveTo(30, 340);
  penWidth(10);
  penRGB(40, 40, 40, 1);
  penDown();
  moveForward(100);
  turnaround();
  penColor("green");
  turnRight(45);
  moveForward(25);
  turnaround();
  turnRight(45);
  moveForward(25);
  penUp();
  moveTo(30, 240);
  penDown();
  turnRight(45);
  moveForward(25);
  moveTo(30, 240);
  turnTo(180);
  moveForward(15);
  turnRight(45);
  moveForward(40);
  turnTo(90);
  moveForward(50);
  turnTo(-35);
  moveForward(25);
  moveTo(30, 240);
  turnTo(180);
  moveForward(35);
  turnTo(225);
  moveForward(50);
  turnTo(90);
  moveForward(65);
  turnTo(-45);
  moveForward(45);
  turnTo(0);
  moveForward(5);
  dot(15);
  moveBackward(25);
  dot(19);
  penUp();
}
